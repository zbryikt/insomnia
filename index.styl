@import vars
@import basic

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

#root
  max-width: 1280px
  margin: 20px auto

iframe
  border: 1px solid #999
  box-shadow: 0 2px 3px rgba(0,0,0,0.3)

#footer
  border-top: 1px solid #999
  height: 30px
  margin-top: 100px
  div
    margin: 10px 0

#landing
  width: 100%
  height: 100%
  background: url(img/banner.jpg) center center
  background-size: cover
  position: relative
  .title
    background: rgba(0,0,0,0.5)
    padding: 20px
    position: absolute
    top: 50%
    width: 100%
    left: 0
    margin-top: -50px
    text-align: center
    color: #fff
  div:nth-of-type(1)
    font-size: 60px
  div:nth-of-type(2)
    font-size: 30px

