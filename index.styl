@import vars
@import basic

@font-face
  font-family: 'cwTeXHei'
  font-style: normal
  font-weight: 500
  src: url(//fonts.gstatic.com/ea/cwtexhei/v3/cwTeXHei-zhonly.eot)
  src: "url(//fonts.gstatic.com/ea/cwtexhei/v3/cwTeXHei-zhonly.eot?#iefix) format('embedded-opentype'),
       url(//fonts.gstatic.com/ea/cwtexhei/v3/cwTeXHei-zhonly.woff2) format('woff2'),
       url(//fonts.gstatic.com/ea/cwtexhei/v3/cwTeXHei-zhonly.woff) format('woff'),
       url(//fonts.gstatic.com/ea/cwtexhei/v3/cwTeXHei-zhonly.ttf) format('truetype')"

html,body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-size: 1.1em
  line-height: 1.4em
  font-family: 'cwTeXHei'

.navbar.navbar-default.navbar-inverse
  background-color: #131f25

#root
  max-width: 1280px
  margin: 20px auto

iframe
  border: 1px solid #999
  box-shadow: 0 2px 3px rgba(0,0,0,0.3)

#footer
  border-top: 1px solid #999
  height: 30px
  margin-top: 100px
  div
    margin: 10px 0

#landing
  width: 100%
  height: 100%
  background: url(img/banner2.jpg) center center
  background-size: cover
  position: relative
  .title
    background: rgba(9,21,27,0.8)
    padding: 20px
    position: absolute
    top: 50%
    width: 100%
    left: 0
    margin-top: -50px
    text-align: center
    color: #fff
    img
      max-width: 100%
  //-div:nth-of-type(1)
  //-  font-size: 60px
  //-  line-height: 70px
  div:nth-of-type(2)
    font-size: 20px
    line-height: 25px

.navbar-brand
  padding: 0
  img
    height: 40px
    margin: 5px

h3
  padding: 10px
  background: #396d79
  display: inline-block
  min-width: 300px
  margin-bottom: 30px
  box-shadow: 1px 1px 3px rgba(0,0,0,0.5)
  color: #fff
